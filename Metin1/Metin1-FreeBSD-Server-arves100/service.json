{
	"name": "Metin1 FreeBSD Server",
	"description": "Metin1 Server",
	"author": "Arves100",
	"type": "Metin1Service",
	"sections": {
		"database": {
			"type": "MySQL",
			"version": "4.1",
			"pack": "database.tar.gz"
		},
		"server": {
			"type": "FreeBSD",
			"version": "5.5",
			"pack": "server.tar.gz"
		},
        "dependencies": {
			"ports": ["mysql41-client"]
        }
	},
	"trees": {
		"account" : ["binaries-account"],
		"chat": ["binaries-chat"],
		"db": ["binaries-db"],
		"game": ["binaries-game", "data-game"],
		"log": ["binaries-log"],
		"mark": ["binaries-mark"]
	},
	"trees_content": {
		"binaries": {
			"account": ["binaries/account/*"],
			"chat": ["binaries/chat/*"],
			"db": ["binaries/db/*"],
			"game": ["binaries/game/*"],
			"log": ["binaries/log/*"],
			"mark": ["binaries/mark/*"]
		},
		"data": {
			"game": ["shared/data/game/*"]
		}
	}
}

